<form>
<%= form_for :contact, :url => {:controller => 'contacts', :action => 'create'} do |f| %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :name, 'Your name' %>
      <%= f.text_field :name, required: true, class: 'form-control input-md form-full' %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :email, 'Your Email' %>
      <%= f.email_field :email, required: true, class: 'form-control input-md form-full' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :message, 'Your Message' %>
    <%= f.text_area :message, required: true, rows: 5, class: 'form-control input-md form-full' %>
  </div>
  <%= f.submit "Submit", class: 'btn btn-secondary' %>

<% end %>
</form>
