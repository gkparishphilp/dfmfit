
<% provide(:title, 'Sign In') %>

<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h2>Sign In</h2>

      <%= form_for User.new, as: 'user', url: main_app.user_session_path(), role: :form do |f| %>



      <%= render 'devise/shared/error_messages' %>

        <div class='form-group'>
          <%= f.label :login, 'Email' %>
          <%= f.email_field :login, class: 'form-control' %>
        </div>

        <div class='form-group'>

          <%= f.label :password, 'Password' %>
          <%= f.password_field :password, class: 'form-control' %>

        </div>

        <div class='form-group'>
          <%= f.label :remember_me, 'Remember Me' %>
          <%= f.check_box :remember_me, checked: true %>


        </div>

        <%= f.submit "Sign In", class: 'btn btn-secondary' %>

        <p style="font-weight: bold">New User? <%=link_to 'Sign Up Now', new_user_registration_path, class: 'btn btn-link' %></p>
        <%= link_to "Back", :back, class: 'btn btn-link' %>

      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
