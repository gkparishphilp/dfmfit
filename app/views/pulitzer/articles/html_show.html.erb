<section class="bg-light" style="padding-top:50px">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
        <h4 class="section-heading text-secondary"><%= @media.title %></h4>
          <hr class="dark my-4">

            <section class="ptb ptb-sm-80">
              <div class="container">
                <div class="row">
                  <div class="col-lg-9 col-md-9 blog-post-hr"></div>
                    <div class="blog-post mb-30">
                      <div class="post-meta">
                        <% if @media.user.present? %>
                          <span>
                            by

                              <% if @media.user.respond_to? :url %>
                                <a href="<%= @media.user.url %>">
                                  <%= @media.user.full_name %>
                                </a>
                              <% else %>
                                <%= @media.user.full_name %>
                              <% end %>
                          
                          </span>
                        <% end %>
                          <span>
                          <%= @media.publish_at.strftime('%B %e, %Y') %>
                          </span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>

<%= render 'pulitzer/articles/side_bar' %>
<%= render 'pulitzer/articles/next_prev_bar' %>
    </div>
  </div>
</div>
</section>
