<div class="container">
  <div class="row">
    <div class="col-sm-12 offset sm-12">
      <h4 class="section-heading text-secondary" style="text-align: center; padding-top: 50px">Edit promotion</h4>
        <hr class="dark my-4">

      <%= form_for @promo do |f| %>

      <div class='form-group'>
        <%= form.label :promo_title, 'Promo title' %>
        <%= form.text_field :promo_title, class: 'form-control' %>
      </div>



      <div class='form-group'>
        <%= form.label :promo_text, 'Promo text' %>
        <%= form.text_area :promo_text, class: 'form-control' %>
      </div>

      <%= f.submit "Submit", class: 'btn btn-secondary' %>

    <% end %>
  </div>
</div>
</div>
