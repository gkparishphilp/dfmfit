<p id="notice"><%= notice %></p>

<h1>Logs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Workout date</th>
      <th>Workout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.workout_date %></td>
        <td><%= log.workout %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path %>

<p><%=link_to 'Edit My Profile', edit_user_registration_path, class: 'btn btn-link' %></p>
